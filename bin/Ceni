#		'wpa-ssid' => 'kelnet',
#		'wpa-psk' => 'mypasswd',
#		'broadcast' => '192.168.0.255',
#		'dns-nameservers' => '192.168.0.254',
#		'address' => '192.168.1.99',
#		'netmask' => '255.255.255.0'
#	},
#	'pre-up' => [
#		'/path/to/script -i eth2',
#	],
#	'comment' => [
#		"\t#wpa-psk myoldpasswd",
#		"\t#wpa-foo bar
#	],
#);
