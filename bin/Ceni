#===============================================#
sub redirect_stderr {
	open OLDERR, '>&', \*STDERR or die "E: Failed to dup STDERR to OLDERR: $!";
	my $log = $dbg ? '/tmp/ceni.log' : '/dev/null';
	open STDERR, '>', $log or die "E: Failed to redirect STDERR to $log: $!";
}

sub restore_stderr {
	close STDERR or die "E: Failed to close STDERR: $!";
	open STDERR, '>&', \*OLDERR or die "E: Failed to restore stderr: $!";
	close OLDERR or die "E: Failed to close OLDERR: $!";
}

sub is_ip {
	my $string = shift or return;

	$string =~
	        m/^([01]?\d\d?|2[0-4]\d|25[0-5])\.([01]?\d\d?|2[0-4]\d|25[0-5])\.([01]?\d\d?|2[0-4]\d|25[0-5])\.([01]?\d\d?|2[0-4]\d|25[0-5])$/
	        and return 1;

	return 0;
}

sub is_hex {
	my $string = shift;

	$string =~ /[^A-F0-9]/i and return 0;

	return 1;
}

sub psk_is_valid {
	my ($enc, $psk) = (shift, shift);
	my $psk_len = length $psk;

	if ($enc eq 'WEP') {
		if (is_hex($psk) and $psk_len =~ m/^(10|26|32|58)$/) {
			return 1;
		}
		elsif ($psk_len >= 5) {
			return 1;
		}
	}
	elsif ($enc eq 'WPA') {
		if (is_hex($psk) and $psk_len == 64) {
			return 1;
		}
		elsif ($psk_len >= 8 and $psk_len <= 63) {
			return 1;
		}
	}

	return 0;
}

sub interface_form {
	my @i = sort keys %{ $bend->get_iface_info() };
	my @v = sort keys %{ $bend->get_iface_conf() };
	my %i;

	for my $if (@i) {
		my $info = $bend->get_iface_info($if);

		$i{$if} = sprintf "%-6s", $if;

		for ('connection_type', 'address', 'drivers', 'desc') {
			$i{$if} .= " " . $info->{$_};
		}
	}

	for my $if (@v) {
		if (not $bend->is_iface_valid($if) and $if ne 'lo') {
			push(@i, $if);
			$i{$if} = sprintf "%-12s Logical Interface / Network", $if;
		}
	}

	my $interface_form = $ceni->add(
		'interface_form', 'Window',
		-title  => 'Network Interfaces',
		-border => 1,
		-bfg    => 'green',
		-tfg    => 'green',
	);

	$interface_form->add(
		'interface_title', 'TextEntry',
		-text      => 'Choose a network interface to configure:',
		-border    => 0,
		-x         => 3,
		-y         => 2,
		-width     => 50,
		-focusable => 0,
		-readonly  => 1,
	);

	my $interface_list = $interface_form->add(
		'interface_list', 'Listbox',
		-border     => 1,
		-bfg        => 'green',
		-wraparound => 1,
		-x          => 1,
		-y          => 4,
		-width      => 76,
		-height     => 13,
		-values     => \@i,
		-labels     => \%i,
		-onchange   => sub {
			my $this = shift;
			$iface = $this->get();
			$this->parent->loose_focus();
		},
	);

	my $exit = $interface_form->add(
		'exit',
		'Buttonbox',
		-x       => 30,
		-y       => 17,
		-width   => 12,
		-height  => 4,
		-border  => 1,
		-bfg     => 'blue',
		-buttons => [ {
				-label   => '[  Exit  ]',
				-onpress => sub { exit 0; }
			}, ],
	);

	$interface_list->focus();
	$interface_form->set_binding(sub { exit 1; }, "\cC", "\cQ");
	$interface_form->modalfocus();
	$ceni->delete('interface_form');
}

sub configure_form {
	my $configure_form = $ceni->add(
		'configure_form', 'Window',
		-title  => "$iface already configured!",
		-border => 1,
		-bfg    => 'green',
		-tfg    => 'green',
	);

	$configure_form->add(
		'configure_title', 'TextEditor',
		-text =>
		        "The selected network interface, $iface, is already configured.\n"
		        . "Would you like to reconfigure, remove or cancel setup of $iface?\n",
		-border    => 0,
		-x         => 3,
		-y         => 2,
		-width     => 75,
		-height    => 4,
		-focusable => 0,
		-readonly  => 1,
	);

	my $configure_list = $configure_form->add(
		'configure_list',
		'Listbox',
		-border     => 1,
		-bfg        => 'green',
		-wraparound => 1,
		-x          => 15,
		-y          => 6,
		-width      => 35,
		-height     => 5,
		-values     => [ 'reconfigure', 'deconfigure', 'cancel', ],
		-labels     => {
			'reconfigure' => "Reconfigure $iface",
			'deconfigure' => "Remove configuration for $iface",
			'cancel'      => "Cancel",
		},
		-onchange => sub { shift->parent->loose_focus(); },
	);

	$configure_list->focus();
	$configure_form->set_binding(sub { exit 1; }, "\cC", "\cQ");
	$configure_form->modalfocus();
	$ceni->delete('configure_form');

	if ($configure_list->get() =~ /^(re|de)configure$/) {
		$ceni->status("Removing ifupdown settings for $iface...");
		$bend->ifdown($iface);
		$ceni->nostatus();

		if ($configure_list->get() eq 'deconfigure') {
			$bend->rem_iface_conf($iface);
			$iface = undef;
		}
	}
	else {
		$iface = undef;
	}
}

sub wifi_scan {
	$ceni->status('Scanning for wireless networks...');
	$bend->iwlist_scan($iface);
	$ceni->nostatus();
}

sub wifi_scan_form {
	my @s = sort { $a <=> $b } keys %{ $bend->get_iwlist_res() };
	my %s;

	$bend->debug(\@s, 's');
	for my $c (@s) {
		my $cell = $bend->get_iwlist_res($c);

		$s{$c} = " $c  ";

		if ($cell->{'mode'} ne 'master') {
			$s{$c} .= sprintf "%-25s",
			        '"' . $cell->{'ssid'} . '"' . " (" . $cell->{'mode'} . ")";
		}
		else {
			$s{$c} .= sprintf "%-25s", '"' . $cell->{'ssid'} . '"';
		}

		$s{$c} .= sprintf "%-14s", "Signal: " . $cell->{'qual'};

		if ($cell->{'enc'} eq 'on') {
			$s{$c} .= $cell->{'wpa'} ? " Enc: WPA " : " Enc: WEP ";
		}
		else {
			$s{$c} .= " Enc: OPEN";
		}

		$s{$c} .= ' ' . $cell->{'bssid'};
	}

	@s = ('wpa_roam', @s);
	$s{'wpa_roam'} = ' Roam with wpa_supplicant (wpa_gui, wpa_cli) ...';

	my $wifi_scan_form = $ceni->add(
		'wireless_scan_form', 'Window',
		-title  => "Wireless Networks",
		-border => 1,
		-bfg    => 'green',
		-tfg    => 'green',
	);

	$wifi_scan_form->add(
		'wireless_ssid_title', 'TextEntry',
		-text      => 'Choose a wireless network:',
		-border    => 0,
		-x         => 3,
		-y         => 2,
		-width     => 75,
		-focusable => 0,
		-readonly  => 1,
	);

	my $wifi_ssid_list = $wifi_scan_form->add(
		'wireless_ssid_list', 'Listbox',
		-border     => 1,
		-bfg        => 'green',
		-wraparound => 1,
		-x          => 1,
		-y          => 4,
		-width      => 76,
		-height     => 13,
		-values     => \@s,
		-labels     => \%s,
		-onchange   => sub {
			my $this = shift;
			$wcell = $this->get();
			$this->parent->lose_focus();
		},
	);

	my $wifi_scan_ignore = $wifi_scan_form->add(
		'wireless_scan_ignore',
		'Buttonbox',
		-x       => 15,
		-y       => 17,
		-width   => 12,
		-height  => 4,
		-border  => 1,
		-bfg     => 'blue',
		-buttons => [ {
				-label   => '[  Skip  ]',
				-onpress => sub {
					$wcell = 'none';
					shift->parent->lose_focus();
				}
			}, ],
	);

	my $wifi_scan_again = $wifi_scan_form->add(
		'wireless_scan_again',
		'Buttonbox',
		-x       => 30,
		-y       => 17,
		-width   => 12,
		-height  => 4,
		-border  => 1,
		-bfg     => 'blue',
		-buttons => [ {
				-label   => '[  Scan  ]',
				-onpress => sub {
					$wcell = undef;
					shift->parent->lose_focus();
				}
			}, ],
	);

	my $wifi_scan_cancel = $wifi_scan_form->add(
		'wireless_scan_cancel',
		'Buttonbox',
		-x       => 45,
		-y       => 17,
		-width   => 14,
		-height  => 4,
		-border  => 1,
		-bfg     => 'blue',
		-buttons => [ {
				-label   => '[  Cancel  ]',
				-onpress => sub {
					$wcell = undef;
					$iface = undef;
					shift->parent->lose_focus();
				}
			}, ],
	);

	$wifi_ssid_list->focus();
	$wifi_scan_form->set_binding(sub { exit 1; }, "\cC", "\cQ");
	$wifi_scan_form->modalfocus();
	$ceni->delete('wireless_scan_form');
}

sub wifi_conf_form {
	my $info = $bend->get_iface_info($iface);
	my $scan = $bend->get_iwlist_res($wcell);
	my %w;

	my $wifi_conf_form = $ceni->add(
		'wifi_conf_form', 'Window',
		-title  => "Wireless settings for $iface",
		-border => 1,
		-bfg    => 'green',
		-tfg    => 'green',
	);

	$wifi_conf_form->add(
		'backend_title', 'TextEntry',
		-text      => 'Backend:',
		-border    => 0,
		-x         => 5,
		-y         => 1,
		-width     => 9,
		-focusable => 0,
		-readonly  => 1,
	);

	$w{'backend'} = $wifi_conf_form->add(
		'backend_list', 'Listbox',
		-radio      => 1,
		-wraparound => 1,
		-ipadleft   => 2,
		-x          => 15,
		-y          => 1,
		-width      => 20,
		-height     => 2,
		-values     => [ 'wireless', 'wpa', ],
		-labels =>
		        { 'wireless' => 'wireless-tools', 'wpa' => 'wpa_supplicant', },
		-selected => 0,
	);

	$wifi_conf_form->add(
		'mode_title', 'TextEntry',
		-text      => 'Mode:',
		-border    => 0,
		-x         => 45,
		-y         => 1,
		-width     => 9,
		-focusable => 0,
		-readonly  => 1,
	);

	$w{'mode'} = $wifi_conf_form->add(
		'mode_list', 'Listbox',
		-radio      => 1,
		-wraparound => 1,
		-ipadleft   => 2,
		-x          => 55,
		-y          => 1,
		-width      => 20,
		-height     => 2,
		-values     => [ 'managed', 'ad-hoc', ],
		-selected   => 0,
	);

	$wifi_conf_form->add(
		'wireless_enc_title', 'TextEntry',
		-text      => 'Encryption:',
		-border    => 0,
		-x         => 25,
		-y         => 4,
		-width     => 12,
		-focusable => 0,
		-readonly  => 1,
	);

	$w{'enc'} = $wifi_conf_form->add(
		'enc_list',
		'Listbox',
		-radio      => 1,
		-wraparound => 1,
		-ipadleft   => 2,
		-x          => 38,
		-y          => 4,
		-width      => 20,
		-height     => 3,
		-values     => [ 'None', 'WEP', 'WPA', ],
		-selected   => 0,
		-onchange   => sub {
			my $this = shift;

			if ($this->get() eq 'None') {
				for ('psk', 'psk_len', 'stdin', 'clear') {
					$w{$_}->set_color_bfg('red');
					$w{$_}->focusable(0);
				}
			}
			else {
				if ($this->get() eq 'WPA') {
					$w{'backend'}->set_selection(1);
					$w{'backend'}->focusable(0);
				}

				for ('stdin', 'clear') {
					$w{$_}->set_color_bfg('blue');
					$w{$_}->focusable(1);
				}

				$w{'psk'}->set_color_bfg('green');
				$w{'psk'}->focusable(1);
			}
		}
	);

	$wifi_conf_form->add(
		'wireless_ssid_title', 'TextEntry',
		-text      => 'Network ESSID:',
		-border    => 0,
		-x         => 1,
		-y         => 9,
		-width     => 16,
		-focusable => 0,
		-readonly  => 1,
	);

	$w{'ssid'} = $wifi_conf_form->add(
		'wireless_ssid_input', 'TextEntry',
		-border   => 1,
		-bfg      => 'green',
		-x        => 17,
		-y        => 8,
		-ipadleft => 1,
		-width    => 36,
	);

	$w{'hidden_ssid'} = $wifi_conf_form->add(
		'wireless_hidden_ssid', 'Checkbox',
		-label => 'hidden ESSID',
		-x     => 55,
		-y     => 9,
		-width => 20,
	);

	$wifi_conf_form->add(
		'wireless_bssid_title', 'TextEntry',
		-text      => 'Network BSSID:',
		-border    => 0,
		-x         => 1,
		-y         => 12,
		-width     => 16,
		-focusable => 0,
		-readonly  => 1,
	);

	$w{'bssid'} = $wifi_conf_form->add(
		'wireless_bssid_input', 'TextEntry',
		-border   => 1,
		-bfg      => 'green',
		-x        => 17,
		-y        => 11,
		-ipadleft => 1,
		-width    => 36,
		-regexp   => 'm/^[0-9A-F:]*$/i',
	);

	$w{'force_bssid'} = $wifi_conf_form->add(
		'wireless_force_bssid', 'Checkbox',
		-label    => 'forced BSSID',
		-x        => 55,
		-y        => 12,
		-width    => 20,
		-onchange => sub { $w{'bssid'}->focusable(1); },
	);

	$wifi_conf_form->add(
		'wireless_psk_title', 'TextEntry',
		-text      => 'Preshared Key:',
		-border    => 0,
		-x         => 1,
		-y         => 15,
		-width     => 16,
		-focusable => 0,
		-readonly  => 1,
	);

	$w{'psk'} = $wifi_conf_form->add(
		'wireless_psk_input',
		'PasswordEntry',
		-border       => 1,
		-showoverflow => 0,
		-bfg          => 'red',
		-x            => 17,
		-y            => 14,
		-width        => 30,
		-ipadleft     => 1,
		-focusable    => 0,
		-onchange     => sub {
			my $this = shift;
			my $psk  = $this->get();
			my $enc  = $w{'enc'}->get();

			if (psk_is_valid($enc, $psk)) {
				$w{'psk_len'}->set_color_bfg('green');
			}
			else {
				$w{'psk_len'}->set_color_bfg('red');
			}

			$w{'psk_len'}->text(length $psk);
		},
	);

	$w{'psk_len'} = $wifi_conf_form->add(
		'wireless_psk_count', 'TextEntry',
		-text      => '0',
		-x         => 47,
		-y         => 14,
		-width     => 6,
		-height    => 4,
		-border    => 1,
		-focusable => 0,
		-readonly  => 1,
		-bfg       => 'red',
		-ipadleft  => 1,
	);

	$w{'stdin'} = $wifi_conf_form->add(
		'wireless_psk_stdin',
		'Buttonbox',
		-x         => 54,
		-y         => 14,
		-width     => 9,
		-height    => 4,
		-border    => 1,
		-bfg       => 'red',
		-focusable => 0,
		-buttons   => [ {
				-label   => '[Paste]',
				-onpress => sub {
					my $this = shift;
					my $enc  = $w{'enc'}->get();

					$ceni->leave_curses();

					print 'Enter preshared key: ';

					ReadMode('noecho');
					chomp(my $psk = ReadLine(0));
					ReadMode('normal');

					print "\n";

					$ceni->reset_curses();

					$w{'psk'}->text($psk);
					$w{'psk_len'}->text(length $psk);

					$this->lose_focus();

					if (psk_is_valid($enc, $psk)) {
						$w{'psk_len'}->set_color_bfg('green');
						$w{'confirm'}->focus();
					}
					else {
						$w{'psk'}->focus();
					}
				}
			}, ],
	);

	$w{'clear'} = $wifi_conf_form->add(
		'wireless_psk_clear',
		'Buttonbox',
		-x         => 64,
		-y         => 14,
		-width     => 9,
		-height    => 4,
		-border    => 1,
		-bfg       => 'red',
		-focusable => 0,
		-buttons   => [ {
				-label   => '[Clear]',
				-onpress => sub {
					my $this = shift;

					$w{'psk_len'}->text('0');
					$w{'psk_len'}->set_color_bfg('red');

					$this->lose_focus();

					$w{'psk'}->text('');
					$w{'psk'}->focus();
				}
			}, ],
	);

	$w{'confirm'} = $wifi_conf_form->add(
		'wireless_confirm',
		'Buttonbox',
		-x       => 15,
		-y       => 17,
		-width   => 12,
		-height  => 4,
		-border  => 1,
		-bfg     => 'blue',
		-buttons => [ {
				-label   => '[ Accept ]',
				-onpress => sub {
					my $this  = shift;
					my $enc   = $w{'enc'}->get();
					my $valid = 0;

					if ($enc eq 'None') {
						$valid++;
					}
					else {
						if (psk_is_valid($enc, $w{'psk'}->get())) {
							$valid++;
						}
						else {
							if ($enc eq 'WEP') {
								$ceni->error(
									" $enc encryption requires a key with at least 5 characters."
								);
							}
							elsif ($enc eq 'WPA') {
								$ceni->error(
									" $enc encryption requires a key with 8 to 63 characters."
								);
							}
							$this->lose_focus();
							$w{'psk'}->focus();
						}
					}

					if ($valid) {
						$this->parent->lose_focus();
					}
				}
			}, ],
	);

	my $wifi_scan = $wifi_conf_form->add(
		'wireless_scan',
		'Buttonbox',
		-x       => 30,
		-y       => 17,
		-width   => 12,
		-height  => 4,
		-border  => 1,
		-bfg     => 'blue',
		-buttons => [ {
				-label   => '[  Scan  ]',
				-onpress => sub {
					$wcell = undef;
					shift->parent->lose_focus();
				}
			}, ],
	);

	my $wifi_cancel = $wifi_conf_form->add(
		'wireless_cancel',
		'Buttonbox',
		-x       => 45,
		-y       => 17,
		-width   => 14,
		-height  => 4,
		-border  => 1,
		-bfg     => 'blue',
		-buttons => [ {
				-label   => '[  Cancel  ]',
				-onpress => sub {
					$iface = undef;
					$wcell = undef;
					shift->parent->lose_focus();
				}
			}, ],
	);

	if ($wcell and $wcell ne 'none') {
		if ($scan->{'ssid'}) {
			if ($scan->{'ssid'} =~ m/^(any|on|off)$/i) {
				$w{'ssid'}->text('-- ' . $scan->{'ssid'});
				$w{'ssid'}->focusable(0);
			}
			elsif ($scan->{'ssid'} !~ /^(<hidden>|\*)$/) {
				$w{'ssid'}->text($scan->{'ssid'});
				$w{'ssid'}->focusable(0);
			}
			else {
				if ($scan->{'ssid'} eq '<hidden>') {
					$w{'hidden_ssid'}->check();
				}

				$w{'ssid'}->focus();
			}
		}

		if ($scan->{'enc'} eq 'on') {
			if ($scan->{'wpa'}) {
				$w{'enc'}->set_selection(2);
				$w{'backend'}->set_selection(1);
			}
			else {
				$w{'enc'}->set_selection(1);
				$w{'backend'}->set_selection(0);
			}

			if ($scan->{'ssid'}) {
				$w{'psk'}->focus();
			}
		}

		if ($scan->{'mode'}) {
			if ($scan->{'mode'} eq 'master') {
				$w{'mode'}->set_selection(0);
			}
			elsif ($scan->{'mode'} eq 'ad-hoc') {
				$w{'mode'}->set_selection(1);
			}
		}

		if ($scan->{'bssid'}) {
			$w{'bssid'}->text($scan->{'bssid'});
			$w{'bssid'}->focusable(0);
		}
	}
	else {
		$w{'backend'}->focus();
	}

	$wifi_conf_form->set_binding(sub { exit 1; }, "\cC", "\cQ");
	$wifi_conf_form->modalfocus();
	$ceni->delete('wifi_conf_form');

	if ($w{'mode'}->get() ne 'managed') {
		if ($info->{'drivers'} eq 'ath_pci') {
			$conf{'stanza'}{'madwifi-mode'} = $w{'mode'}->get();
		}
		else {
			$conf{'stanza'}{'wireless-mode'} = $w{'mode'}->get();
		}
	}

	if ($w{'backend'}->get() eq 'wireless') {
		if ($w{'ssid'}->get()) {
			$conf{'stanza'}{'wireless-essid'} = $w{'ssid'}->get();
		}
		else {
			$conf{'stanza'}{'wireless-essid'} = "any";
		}

		if ($w{'psk'}->get()) {
			my $psk     = $w{'psk'}->get();
			my $psk_len = length $psk;

			if (is_hex($psk) and $psk_len =~ m/^(10|26|32|58)$/) {
				$conf{'stanza'}{'wireless-key'} = $psk;
			}
			elsif ($psk !~ /^s:/) {
				$conf{'stanza'}{'wireless-key'} = "s:" . $psk;
			}
			else {
				$conf{'stanza'}{'wireless-key'} = $psk;
			}
		}

		if ($w{'bssid'}->get and $w{'force_bssid'}->get()) {
			$conf{'stanza'}{'wireless-ap'} = $w{'bssid'}->get();
		}
	}
	else {
		if ($w{'ssid'}->get()) {
			$conf{'stanza'}{'wpa-ssid'} = $w{'ssid'}->get();
		}

		if ($w{'bssid'}->get and $w{'force_bssid'}->get()) {
			$conf{'stanza'}{'wpa-bssid'} = $w{'bssid'}->get();
		}

		if ($w{'hidden_ssid'}->get()) {
			$conf{'stanza'}{'wpa-scan-ssid'} = '1';
			$conf{'stanza'}{'wpa-ap-scan'}   = '1';
		}

		if ($w{'enc'}->get() =~ /^(None|WEP)$/) {
			$conf{'stanza'}{'wpa-key-mgmt'} = 'NONE';

			if ($w{'enc'}->get() eq 'WEP') {
				$conf{'stanza'}{'wpa-wep-key0'}      = $w{'psk'}->get();
				$conf{'stanza'}{'wpa-wep-tx-keyidx'} = '0';

				if ($conf{'stanza'}{'wpa-wep-key0'} =~ m/^-- (any|on|off)$/) {
					$conf{'stanza'}{'wpa-wep-key0'} =~ s/^--\s+//;
				}
			}
		}
		else {
			$conf{'stanza'}{'wpa-psk'} = $w{'psk'}->get();
		}
	}
}

sub netw_conf_form {
	my $current = $bend->get_iface_conf($iface);
	my @static = (
		'address', 'netmask',    'network', 'broadcast',
		'gateway', 'dns-search', 'dns-nameservers',
	);
	my %n;

	my $network_form = $ceni->add(
		'network_form', 'Window',
		-title  => "Network settings for $iface",
		-border => 1,
		-bfg    => 'green',
		-tfg    => 'green',
	);

	$network_form->add(
		'method_title', 'TextEntry',
		-text      => 'Method:',
		-border    => 0,
		-x         => 1,
		-y         => 1,
		-width     => 12,
		-focusable => 0,
		-readonly  => 1,
	);

	$n{'method'} = $network_form->add(
		'method_list',
		'Listbox',
		-radio      => 1,
		-wraparound => 1,
		-ipadleft   => 2,
		-x          => 15,
		-y          => 1,
		-width      => 20,
		-height     => 3,
		-values     => [ 'dhcp', 'static', 'manual', ],
		-selected   => 0,
		-onchange   => sub {
			if ($n{'method'}->get() ne 'static') {
				foreach (@static) {
					next unless $n{$_};
					next if /^dns/;
					$n{$_}->focusable(0);
					$n{$_}->set_color_bfg('red');
					$n{$_}->text('');
				}
			}
			else {
				foreach (@static) {
					next unless $n{$_};
					$n{$_}->focusable(1);
					$n{$_}->set_color_bfg('green');

					if ($current->{'stanza'}->{$_}) {
						$n{$_}->text($current->{'stanza'}->{$_});
					}
				}
			}
		},
	);

	$network_form->add(
		'class_title', 'TextEntry',
		-text      => 'Class:',
		-border    => 0,
		-x         => 40,
		-y         => 1,
		-width     => 12,
		-focusable => 0,
		-readonly  => 1,
	);

	$n{'class'} = $network_form->add(
		'class_list', 'Listbox',
		-radio      => 1,
		-wraparound => 1,
		-ipadleft   => 2,
		-x          => 55,
		-y          => 1,
		-width      => 20,
		-height     => 3,
		-values     => [ 'allow-hotplug', 'auto', 'manual', ],
		-selected   => 0,
	);

	$network_form->add(
		'address_title', 'TextEntry',
		-text      => 'IP address:',
		-border    => 0,
		-x         => 1,
		-y         => 6,
		-width     => 14,
		-focusable => 0,
		-readonly  => 1,
	);

	$n{'address'} = $network_form->add(
		'address_input',
		'TextEntry',
		-border    => 1,
		-bfg       => 'red',
		-x         => 15,
		-y         => 5,
		-width     => 20,
		-ipadleft  => 1,
		-focusable => 0,
		-regexp    => '/^[0-9\.]*$/',
		-onchange  => sub { $n{'address'}->delete_till_eol(); },
		-onblur    => sub {
			if (is_ip($n{'address'}->get())) {
				if ($n{'address'}->get() =~ m/^(10\.)\d+\.\d+\.\d+$/) {
					$n{'network'}->text($1 . '0.0.0');
					$n{'broadcast'}->text($1 . '255.255.255');
					$n{'netmask'}->text('255.0.0.0');
				}
				elsif ($n{'address'}->get() =~ m/^(172\.\d+\.)\d+\.\d+$/) {
					$n{'network'}->text($1 . '0.0');
					$n{'broadcast'}->text($1 . '255.255');
					$n{'netmask'}->text('255.255.0.0');
				}
				elsif ($n{'address'}->get() =~ m/^(\d+\.\d+\.\d+\.)\d+$/) {
					$n{'network'}->text($1 . '0');
					$n{'broadcast'}->text($1 . '255');
					$n{'netmask'}->text('255.255.255.0');
				}
			}
		},
	);

	$network_form->add(
		'network_title', 'TextEntry',
		-text      => 'Network:',
		-border    => 0,
		-x         => 40,
		-y         => 6,
		-width     => 14,
		-focusable => 0,
		-readonly  => 1,
	);

	$n{'network'} = $network_form->add(
		'network_input', 'TextEntry',
		-border    => 1,
		-bfg       => 'red',
		-x         => 55,
		-y         => 5,
		-width     => 20,
		-ipadleft  => 1,
		-focusable => 0,
		-regexp    => '/^[0-9\.]*$/',
		-onchange  => sub { $n{'network'}->delete_till_eol(); },
	);

	$network_form->add(
		'netmask_title', 'TextEntry',
		-text      => 'Netmask:',
		-border    => 0,
		-x         => 1,
		-y         => 9,
		-width     => 14,
		-focusable => 0,
		-readonly  => 1,
	);

	$n{'netmask'} = $network_form->add(
		'netmask_input', 'TextEntry',
		-border    => 1,
		-bfg       => 'red',
		-x         => 15,
		-y         => 8,
		-width     => 20,
		-ipadleft  => 1,
		-focusable => 0,
		-regexp    => '/^[0-9\.]*$/',
		-onchange  => sub { $n{'netmask'}->delete_till_eol(); },
	);

	$network_form->add(
		'broadcast_title', 'TextEntry',
		-text      => 'Broadcast:',
		-border    => 0,
		-x         => 40,
		-y         => 9,
		-width     => 14,
		-focusable => 0,
		-readonly  => 1,
	);

	$n{'broadcast'} = $network_form->add(
		'broadcast_input', 'TextEntry',
		-border    => 1,
		-bfg       => 'red',
		-x         => 55,
		-y         => 8,
		-width     => 20,
		-ipadleft  => 1,
		-focusable => 0,
		-regexp    => '/^[0-9\.]*$/',
		-onchange  => sub { $n{'broadcast'}->delete_till_eol(); },
	);

	$network_form->add(
		'gateway_title', 'TextEntry',
		-text      => 'Gateway:',
		-border    => 0,
		-x         => 1,
		-y         => 12,
		-width     => 14,
		-focusable => 0,
		-readonly  => 1,
	);

	$n{'gateway'} = $network_form->add(
		'gateway_input', 'TextEntry',
		-border    => 1,
		-bfg       => 'red',
		-x         => 15,
		-y         => 11,
		-width     => 20,
		-ipadleft  => 1,
		-focusable => 0,
		-regexp    => '/^[0-9\.]*$/',
		-onchange  => sub { $n{'gateway'}->delete_till_eol(); },
	);

	if (-x '/sbin/resolvconf') {
		$network_form->add(
			'dnssearch_title', 'TextEntry',
			-text      => 'DNS Search:',
			-border    => 0,
			-x         => 40,
			-y         => 12,
			-width     => 14,
			-focusable => 0,
			-readonly  => 1,
		);

		$n{'dns-search'} = $network_form->add(
			'dnssearch_input', 'TextEntry',
			-border    => 1,
			-bfg       => 'green',
			-x         => 55,
			-y         => 11,
			-width     => 20,
			-ipadleft  => 1,
			-focusable => 1,
		);

		$network_form->add(
			'dnsnameservers_title', 'TextEntry',
			-text      => 'Nameservers:',
			-border    => 0,
			-x         => 1,
			-y         => 15,
			-width     => 14,
			-focusable => 0,
			-readonly  => 1,
		);

		$n{'dns-nameservers'} = $network_form->add(
			'dnsnameservers_input', 'TextEntry',
			-border       => 1,
			-showoverflow => 0,
			-bfg          => 'green',
			-x            => 15,
			-y            => 14,
			-width        => 60,
			-ipadleft     => 1,
			-focusable    => 1,
		);
	}

	my $confirm = $network_form->add(
		'confirm',
		'Buttonbox',
		-x       => 15,
		-y       => 17,
		-width   => 12,
		-height  => 4,
		-border  => 1,
		-bfg     => 'blue',
		-buttons => [ {
				-label   => '[ Accept ]',
				-onpress => sub {
					my $this = shift;
					my $invalid;
					for (sort keys %n) {
						if ($n{'method'}->get() eq 'static') {
							if (m/address|netmask/) {
								unless (is_ip($n{$_}->get())) {
									$invalid = $_;
									last;
								}
							}
						}

						$n{$_}->get() or next;

						if (m/broadcast|gateway|network/) {
							unless (is_ip($n{$_}->get())) {
								$invalid = $_;
								last;
							}
						}
					}

					if ($invalid) {
						$ceni->error("Invalid $invalid");
						$this->lose_focus();
						$n{$invalid}->focus();
					}
					else {
						$this->parent->lose_focus();
					}
				}
			}, ],
	);

	my $back = $network_form->add(
		'back',
		'Buttonbox',
		-x       => 30,
		-y       => 17,
		-width   => 12,
		-height  => 4,
		-border  => 1,
		-bfg     => 'blue',
		-buttons => [ {
				-label   => '[  Back  ]',
				-onpress => sub {
					if ($wcell) {
						$wcell = undef;
					}
					else {
						$iface = undef;
					}
					shift->parent->lose_focus();
				}
			}, ],
	);

	my $cancel = $network_form->add(
		'cancel',
		'Buttonbox',
		-x       => 45,
		-y       => 17,
		-width   => 14,
		-height  => 4,
		-border  => 1,
		-bfg     => 'blue',
		-buttons => [ {
				-label   => '[  Cancel  ]',
				-onpress => sub {
					$iface = undef;
					shift->parent->lose_focus();
				}
			}, ],
	);

	if (not $current->{'method'}) {
		$n{'method'}->set_selection(0);
	}
	elsif ($current->{'method'} eq 'static') {
		$n{'method'}->set_selection(1);
	}

	if (not $current->{'class'} and keys %{$current}) {
		$n{'class'}->set_selection(2);
	}
	elsif ($current->{'class'} eq 'auto') {
		$n{'class'}->set_selection(1);
	}
	else {
		$n{'class'}->set_selection(0);
	}

	$n{'method'}->focus();
	$network_form->set_binding(sub { exit 1; }, "\cC", "\cQ");
	$network_form->modalfocus();
	$ceni->delete('network_form');

	for ('class', 'method') {
		if ($n{$_}->get()) {
			$conf{$_} = $n{$_}->get();
		}
	}

	for (@static) {
		if ($n{$_} and $n{$_}->get()) {
			$conf{'stanza'}{$_} = $n{$_}->get();
		}
	}
}

sub write_eni_conf {
	my $current = $bend->get_iface_conf($iface);

	if ($current->{'comment'}) {
		$conf{'comment'} = $current->{'comment'};
	}

	$bend->debug(\%conf, 'conf');

	$bend->set_iface_conf($iface, \%conf);
	$bend->parse_eni();
}

sub ifupdown_iface {
	$ceni->leave_curses();

	restore_stderr();

	$bend->ifup($iface);

	print "\n";
	print '#', '#' x 59, "\n";
	print "  Press any key and then Enter to continue (re)configuring\n";
	print "  network interfaces.\n";
	print "\n";
	print "  Otherwise press the Enter key to exit now.\n";
	print '#', '#' x 59, "\n";
	print "\n";

	ReadMode('noecho');
	chomp(my $key = ReadLine(0));
	ReadMode('normal');

	if ($key =~ /\w|\s/) {
		redirect_stderr();
		$ceni->reset_curses();
		$iface = undef;
	}
}

#===============================================#
#
sub main () {
	redirect_stderr();

MAIN:	while (1) {
		%conf = ();

		$bend->parse_eni();
		$bend->nic_info();

		if (not $iface) {
			interface_form();
			if (not $iface) { next MAIN; }
		}

		if ($bend->is_iface_configured($iface)) {
			configure_form();
			if (not $iface) { next MAIN; }
		}

		if ($bend->is_iface_valid($iface)) {
			if ($bend->is_iface_wireless($iface)) {
				$wcell = undef;
WIFI:				until ($wcell) {
					wifi_scan();
					wifi_scan_form();
					if (not $iface) { next MAIN; }
					if (not $wcell) { next WIFI; }
					if ($wcell eq 'wpa_roam') {
						$bend->prep_wpa_roam();
						$bend->conf_wpa_roam($iface);
						# We could provide a wpa_roam specific
						# form here (and remove conf_wpa_roam()
						# from the backend), or at least a large
						# message about how to manage the roaming
						# daemon
					}
					else {
						wifi_conf_form();
						if (not $iface) { next MAIN; }
						if (not $wcell) { next WIFI; }
						netw_conf_form();
						if (not $iface) { next MAIN; }
						if (not $wcell) { next WIFI; }
						write_eni_conf();
					}
					ifupdown_iface();
				}
			}
			else {
				# Non-Wireless Interface
				netw_conf_form();
				if (not $iface) { next MAIN; }
				write_eni_conf();
				ifupdown_iface();
			}
		}
		else {
			# Logical Interface
			# Need to disable the 'class' propery in netw_conf_form()
			netw_conf_form();
			if (not $iface) { next MAIN; }
			write_eni_conf();
			# We need to prompt for configuration of another network
			# using curses yes/no widget here
		}

		if ($iface) {
			last;
		}
	}

	$ceni->leave_curses();
	system("clear");
}

main();

__END__

=head1 NAME

Ceni - Curses /etc/network/interfaces

=head1 SYNOPSIS

  Ceni [ options ]

=head1 DESCRIPTION

A Curses user interface for configuring network interfaces with ifupdown.

=head1 OPTIONS

=item B<--file> filename

Use filename as alternative /etc/network/interfaces

=item B<--iface> iface

Configure network interface with name iface

=item B<--no-act>

Call ifup and ifdown with -n option to simulate action
Must be first argument to have effect.

=item B<--debug>

Debug output piped to /tmp/ceni.log

